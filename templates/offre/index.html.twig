{% extends 'base.html.twig' %}

{% block title %}Liste des Offres{% endblock %}

{% block stylesheets %}
{{ parent() }}

{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Offres</h1>
    {% if nomCategorie %}
        <h2>{{ nomCategorie }}</h2>
    {% endif %}
    
    <div class="d-flex justify-content-center mb-4 fade-in" style="animation-delay: 0.2s;">
        <a class="btn btn-outline-primary btn-sm me-2 btn-custom" href="/dateDesc">Trier par date décroissante</a>
        <a class="btn btn-outline-primary btn-sm btn-custom" href="/dateAsc">Trier par date croissante</a>
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for offre in offres %}
            <div class="col fade-in" style="animation-delay: {{ loop.index * 0.1 }}s;">
                <div class="card h-100">
                <img src="{{ asset('uploads/' ~ offre.logo) }}" class="offer-image" alt="{{ offre.titre }}"
     onerror="this.onerror=null; this.src='https://img.logoipsum.com/321.svg';">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ offre.titre }}</h5>
                        <p class="card-text"><small class="text-muted">{{ offre.Lieu }} | {{ offre.typeContrat.nom }}</small></p>
                        {# <p class="card-text">Publié par :</p> #}
                        {% if offre.typeContrat.nom != 'CDI' %}
                            <p class="card-text">Durée : {{ offre.duree }}</p>
                        {% endif %}
                        <p class="card-text"><small class="text-muted">Publié le : {{ offre.datePublication ? offre.datePublication|date('d-m-Y') : 'N/A' }} par {{ offre.auteur.nom }} {{ offre.auteur.prenom }}{{ offre.auteur.entreprise }}</small></p>
                        {% if offre.datePublication != offre.dateModification %}      
                            <p class="card-text"><small class="text-muted">Modifié le : {{ offre.dateModification ? offre.dateModification|date('d-m-Y') : 'N/A' }}</small></p>
                        {% endif %}
                        <div class="mt-auto">
                            <a href="{{ path('app_offre_show', {'id': offre.id}) }}" class="btn btn-custom btn-sm me-2">Voir détails</a>
                            {% if app.user %}
                                {% if offre.auteur.id == app.user.id %}
                                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 fade-in">
                <div class="alert alert-info" role="alert">
                    Aucune offre trouvée.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% if previous >= 0 %}
    <a href="{{ path('app_offre_index', { offset: previous }) }}">Previous</a>
{% endif %}
{% if next < offres|length %}
    <a href="{{ path('app_offre_index', { offset: next }) }}">Next</a>
{% endif %}













<script>
document.addEventListener('DOMContentLoaded', function() {
    const elements = document.querySelectorAll('.fade-in');
    elements.forEach(element => {
        element.style.opacity = '0';
    });

    function checkScroll() {
        elements.forEach(element => {
            const elementTop = element.getBoundingClientRect().top;
            if (elementTop < window.innerHeight) {
                element.style.animationPlayState = 'running';
            }
        });
    }

    window.addEventListener('scroll', checkScroll);
    checkScroll();
});
</script>
{% endblock %}